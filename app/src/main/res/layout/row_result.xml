
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/grade"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Grade"
        android:textSize="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/coursecode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/grade"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/grade"
        android:layout_toRightOf="@+id/grade"
        android:text="@string/CourseCode"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/coursedesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coursecode"
        android:layout_alignStart="@+id/coursecode"
        android:layout_below="@+id/coursecode"
        android:layout_marginTop="2dp"
        android:text="@string/CourseDesc"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/grade"
        android:layout_alignLeft="@+id/grade"
        android:layout_marginTop="8dp"
        />

</RelativeLayout>
