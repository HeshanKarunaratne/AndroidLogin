<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/coursecode"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="@string/CourseCode"
        android:textSize="16sp"
        android:gravity="center_vertical|center_horizontal"

        />

    <TextView
        android:id="@+id/coursedesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/coursecode"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/grade"
        android:layout_toRightOf="@+id/grade"
        android:text="@string/CourseDesc"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/attempt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coursedesc"
        android:layout_alignStart="@+id/coursedesc"
        android:layout_below="@+id/coursedesc"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="att1"
        android:textSize="20dp"
        android:textStyle="bold" />




    <TextView
        android:id="@+id/attempt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/attempt1"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/attempt1"
        android:text="att2"
        android:textSize="20dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/attempt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/attempt2"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/attempt2"
        android:text="att3"
        android:textSize="20dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/attempt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/attempt3"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/attempt3"
        android:text="att4"
        android:textSize="20dp"
        android:textStyle="bold" />




    <TextView
        android:id="@+id/attempt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/attempt4"
        android:layout_toRightOf="@+id/attempt4"
        android:text="att5"
        android:textSize="20dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/coursecode"
        android:layout_alignLeft="@+id/coursecode"
        android:layout_marginTop="8dp"
        />


</RelativeLayout>